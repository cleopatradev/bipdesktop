{
  "name": "bip-desktop",
  "version": "1.0.0",
  "description": "volunteer project for bip",
  "main": "bin/main.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build-installer": "electron-builder",
    "build-arch32": "electron-builder --ia32",
    "start": "electron -r babel-register ."
  },
  "repository": {
    "type": "git",
    "url": "github.com/cleopatradev/bipdesktop"
  },
  "author": "github.com/cleopatradev",
  "license": "GPL-3.0",
  "devDependencies": {
    "electron": "^8.2.5",
    "electron-builder": "^22.9.1",
    "electron-packager": "^14.2.1",
    "rimraf": "^3.0.2"
  },
  "build": {
    "productName": "Bip Desktop",
    "appId": "bip.desktop",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "app/cdn/favicon.ico"
    },
    "nsis": {
      "installerIcon": "app/cdn/favicon.ico",
      "uninstallerIcon": "app/cdn/favicon.ico",
      "uninstallDisplayName": "Bip Desktop",
      "license": "license.txt",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createStartMenuShortcut": true,
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": true
    },
    "portable": {
      "artifactName": "BipDesktop.exe"
    }
  },
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.3.13",
    "child_process": "^1.0.2",
    "electron-log": "^4.3.1",
    "electron-packager": "^14.2.1",
    "electron-updater": "^4.3.5",
    "express": "^4.17.1",
    "jquery": "^3.5.1",
    "morgan": "^1.10.0",
    "opener": "^1.5.2",
    "packager": "^0.1.9",
    "path": "^0.12.7",
    "preact": "^10.5.8"
  }
}
